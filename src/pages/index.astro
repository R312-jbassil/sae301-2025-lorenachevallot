---
import Layout from "../layouts/Layout.astro";
import imageHero from "../assets/imageHero.png";
import star from "../assets/star.svg";
import bouclier from "../assets/bouclier.svg";
import design from "../assets/design.svg";
import image1 from "../assets/image-1.png";
import image2 from "../assets/image-2.png";
import image3 from "../assets/image-3.png";
import Card from "../components/card.astro";
import AvisClient from "../components/AvisClient.astro";
---

<Layout title="Accueil">
	<main>
		<!-- Hero Section -->
		<section
			class="min-h-[80dvh] w-full bg-white flex items-center justify-center"
		>
			<div
				class="w-full mx-auto px-6 md:px-12 lg:px-16 py-16 md:py-24 lg:py-32"
			>
				<div
					class="flex flex-col lg:flex-row gap-20 lg:gap-32 items-center justify-center w-full"
				>
					<!-- Left Content -->
					<div
						class="flex flex-col gap-8 w-full lg:w-auto lg:max-w-lg"
					>
						<!-- Badge -->
						<div class="inline-flex w-fit">
							<div
								class="flex items-center gap-2 px-4 py-2 border border-black rounded-full bg-white"
							>
								<img
									src={star.src}
									alt="star"
									class="w-4 h-4"
								/>
								<span class="text-sm font-medium"
									>BIENVENUE CHEZ TAVUE</span
								>
							</div>
						</div>

						<!-- Main Heading -->
						<div class="flex flex-col gap-4">
							<h1
								class="text-5xl lg:text-6xl font-bold text-black"
							>
								Créez vos lunettes
								<span class="block text-primary">
									Sur mesure
								</span>
							</h1>
						</div>

						<!-- Description -->
						<p
							class="text-base text-gray-600 max-w-md leading-relaxed"
						>
							Concevez votre paire unique avec notre configurateur
							intuitif. Fabrication française, design minimaliste,
							qualité exceptionnelle.
						</p>

						<!-- CTA Buttons -->
						<div class="flex flex-wrap gap-4">
							<button
								class="px-6 py-3 bg-black text-white font-medium rounded-lg hover:bg-gray-800 transition-colors flex items-center gap-2"
								onclick="window.location.href='/configurateur'"
							>
								Commencer la configuration
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
								</svg>
							</button>
							<button
								class="px-6 py-3 border border-black text-black font-medium rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2"
								onclick="window.location.href='#modeles'"
							>
								Voir les modèles
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
								</svg>
							</button>
						</div>

						<!-- Stats -->
						<div class="flex gap-8 pt-8 border-t border-gray-200">
							<div class="flex flex-col gap-1">
								<p class="text-2xl font-bold text-black">
									100k+
								</p>
								<p class="text-sm text-gray-500">
									Clients satisfaits
								</p>
							</div>
							<div class="flex flex-col gap-1">
								<p class="text-2xl font-bold text-black">
									4.9/5
								</p>
								<p class="text-sm text-gray-500">
									Avis clients
								</p>
							</div>
							<div class="flex flex-col gap-1">
								<p class="text-2xl font-bold text-black">48h</p>
								<p class="text-sm text-gray-500">Livraison</p>
							</div>
						</div>
					</div>

					<!-- Right Image -->
					<div
						class="hidden lg:flex justify-center items-center w-full lg:w-auto"
					>
						<div class="relative">
							<div
								class="absolute inset-0 bg-linear-to-br from-yellow-400 to-orange-400 rounded-3xl opacity-20 blur-2xl"
							>
							</div>
							<img
								src={imageHero.src}
								alt="Lunettes sur mesure"
								class="relative w-full max-w-2xl rounded-3xl shadow-2xl object-cover"
							/>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Philosophy Section -->
		<section class="w-full bg-white py-20">
			<div class="w-full mx-auto px-6 md:px-12 lg:px-16">
				<!-- Header -->
				<div class="text-center mb-16">
					<h2 class="text-4xl lg:text-5xl font-bold text-black mb-4">
						Notre Philosophie
					</h2>
					<p class="text-base text-gray-600 max-w-2xl mx-auto">
						Chaque paire TaVue est le fruit d'un savoir-faire
						français unique, alliant tradition artisanale et
						innovation contemporaine.
					</p>
				</div>

				<!-- Cards Grid -->
				<div class="flex justify-center">
					<div
						class="grid grid-cols-1 md:grid-cols-3 gap-24 max-w-7xl w-full"
					>
						<!-- Card 1 -->
						<div
							class="p-8 border border-gray-200 rounded-xl hover:shadow-lg transition-shadow"
						>
							<div
								class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-6"
							>
								<img
									src={bouclier.src}
									alt="Bouclier"
									class="w-6 h-6"
								/>
							</div>
							<h3 class="text-xl font-bold text-black mb-3">
								Fabrication Française
							</h3>
							<p class="text-sm text-gray-600 leading-relaxed">
								Nos lunettes sont entièrement conçues et
								fabriquées dans nos ateliers français,
								garantissant qualité et traçabilité.
							</p>
						</div>

						<!-- Card 2 -->
						<div
							class="p-8 border border-gray-200 rounded-xl hover:shadow-lg transition-shadow"
						>
							<div
								class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-6"
							>
								<img
									src={star.src}
									alt="Star"
									class="w-6 h-6 brightness-0 invert"
								/>
							</div>
							<h3 class="text-xl font-bold text-black mb-3">
								Design Minimaliste
							</h3>
							<p class="text-sm text-gray-600 leading-relaxed">
								Des lignes épurées et intemporelles qui
								s'adaptent à tous les styles, pour une élégance
								discrète au quotidien.
							</p>
						</div>

						<!-- Card 3 -->
						<div
							class="p-8 border border-gray-200 rounded-xl hover:shadow-lg transition-shadow"
						>
							<div
								class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-6"
							>
								<img
									src={design.src}
									alt="Design"
									class="w-6 h-6"
								/>
							</div>
							<h3 class="text-xl font-bold text-black mb-3">
								Personnalisation Infinie
							</h3>
							<p class="text-sm text-gray-600 leading-relaxed">
								Notre configurateur vous permet de créer une
								paire unique, reflétant parfaitement votre
								personnalité et vos envies.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Journey Section -->
		<section class="w-full bg-white py-20">
			<div class="w-full mx-auto px-6 md:px-12 lg:px-16">
				<div class="max-w-6xl mx-auto">
					<!-- Header -->
					<div class="mb-16">
						<h2
							class="text-4xl lg:text-5xl font-bold text-black mb-4"
						>
							Votre parcours <span class="text-primary"
								>de création</span
							>
						</h2>
						<p class="text-base text-gray-600 max-w-3xl">
							Nos lunettes qui vous ressemblent vraiment grâce à
							notre système de personnalisation avancé.
						</p>
					</div>

					<!-- Content Grid Wrapper -->
					<div class="mx-auto w-fit">
						<!-- Content Grid -->
						<div class="flex gap-8 items-start w-fit">
							<!-- Left: Steps -->
							<div class="space-y-8">
								<!-- Step 1 -->
								<div class="flex gap-6">
									<div class="flex-shrink-0">
										<div
											class="flex items-center justify-center h-10 w-10 rounded-full bg-white border-2 border-black text-black font-bold"
										>
											1
										</div>
									</div>
									<div>
										<h3
											class="text-lg font-bold text-black mb-2"
										>
											Je compose
										</h3>
										<p class="text-sm text-gray-600">
											Je choisis la forme et les
											matériaux, j'ajoute
											pointbranche/verres au millimètre ou
											je désirs mon idée à l'IA.
										</p>
									</div>
								</div>

								<!-- Step 2 -->
								<div class="flex gap-6">
									<div class="flex-shrink-0">
										<div
											class="flex items-center justify-center h-10 w-10 rounded-full bg-white border-2 border-black text-black font-bold"
										>
											2
										</div>
									</div>
									<div>
										<h3
											class="text-lg font-bold text-black mb-2"
										>
											J'enregistre
										</h3>
										<p class="text-sm text-gray-600">
											Je clique Enregistrer, je donne un
											nom à ma création et je la retrouve
											dans Mes modèles. Je peux dupliquer
											pour créer une nouvelle version.
										</p>
									</div>
								</div>

								<!-- Step 3 -->
								<div class="flex gap-6">
									<div class="flex-shrink-0">
										<div
											class="flex items-center justify-center h-10 w-10 rounded-full bg-white border-2 border-black text-black font-bold"
										>
											3
										</div>
									</div>
									<div>
										<h3
											class="text-lg font-bold text-black mb-2"
										>
											Je finalise
										</h3>
										<p class="text-sm text-gray-600">
											J'ajuste au panier. La config est
											figée pour la commande, l'original
											reste éditable pour d'autres
											variantes.
										</p>
									</div>
								</div>
							</div>

							<!-- Right: Images Gallery -->
							<div
								class="grid grid-cols-2 gap-4 auto-rows-max max-w-sm"
							>
								<!-- Left column: Image 1 and 2 stacked -->
								<div class="flex flex-col gap-4">
									<!-- Image 1 - Woman (top) -->
									<div class="rounded-2xl overflow-hidden">
										<img
											src={image1.src}
											alt="Femme avec lunettes"
											class="w-full h-auto object-cover rounded-2xl"
										/>
									</div>

									<!-- Image 2 - Glasses (bottom) -->
									<div class="rounded-2xl overflow-hidden">
										<img
											src={image2.src}
											alt="Lunettes de près"
											class="w-full h-auto object-cover rounded-2xl"
										/>
									</div>
								</div>

								<!-- Image 3 - Man (right, tall) -->
								<div
									class="rounded-2xl overflow-hidden row-span-2"
								>
									<img
										src={image3.src}
										alt="Homme avec lunettes"
										class="w-full h-full object-cover rounded-2xl"
									/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="w-full bg-white py-20">
			<div class="w-full mx-auto px-6 md:px-12 lg:px-16">
				<div class="max-w-3xl mx-auto text-center">
					<h2 class="text-4xl lg:text-5xl font-bold text-black mb-4">
						Prêt à créer
						<span class="block text-primary"
							>votre paire unique ?</span
						>
					</h2>
					<p class="text-base text-gray-600 mb-8 max-w-2xl mx-auto">
						Lancez-vous dans l'expérience TaVue et concevez des
						lunettes qui vous ressemblent.
					</p>
					<button
						class="px-8 py-3 bg-black text-white font-medium rounded-lg hover:bg-gray-800 transition-colors flex items-center gap-2 mx-auto"
						onclick="window.location.href='/configurateur'"
					>
						Démarrer le configurateur
						<svg
							class="w-4 h-4"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
						</svg>
					</button>
				</div>
			</div>
		</section>
		<section id="modeles">
			<!-- Section Titre -->
			<div class="w-full bg-base-100 border-b border-base-300">
				<div class="w-full mx-auto px-16 py-12">
					<h1 class="text-3xl font-normal mb-3">
						Nos <span class="text-primary">modèles</span>
					</h1>
					<p class="text-base-content/70 text-base">
						Découvrez notre sélection de modèles de lunettes
						disponibles.
					</p>
				</div>
			</div>

			<!-- Contenu principal -->
			<div class="w-full flex-1 bg-white">
				<div class="w-full mx-auto px-16 py-12">
					<!-- Grille de cartes -->
					<div
						class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
					>
						<!-- Carte Lunettes Classiques -->
						<Card
							title="Lunettes Classiques"
							price={149}
							monture="Noir"
							branches="Noir"
							verres="Transparent"
							modelId="classique"
						/>

						<!-- Carte Lunettes Bleues -->
						<Card
							title="Lunettes Bleues"
							price={159}
							monture="Bleu foncé"
							branches="Bleu foncé"
							verres="Bleu clair"
							modelId="bleu"
						/>

						<!-- Carte Lunettes Or -->
						<Card
							title="Lunettes Glamour"
							price={179}
							monture="Or"
							branches="Or"
							verres="Transparent"
							modelId="glamour"
						/>

						<!-- Carte Lunettes Rose -->
						<Card
							title="Lunettes Rose"
							price={149}
							monture="Rose"
							branches="Rose"
							verres="Transparent"
							modelId="rose"
						/>

						<!-- Carte Lunettes Rouges -->
						<Card
							title="Lunettes Rouges"
							price={169}
							monture="Rouge"
							branches="Rouge"
							verres="Transparent"
							modelId="rouge"
						/>

						<!-- Carte Lunettes Vertes -->
						<Card
							title="Lunettes Vertes"
							price={159}
							monture="Vert"
							branches="Vert"
							verres="Transparent"
							modelId="vert"
						/>

						<!-- Carte Lunettes Violettes -->
						<Card
							title="Lunettes Violettes"
							price={169}
							monture="Violet"
							branches="Violet"
							verres="Transparent"
							modelId="violet"
						/>

						<!-- Carte Lunettes Grises -->
						<Card
							title="Lunettes Grises"
							price={149}
							monture="Gris"
							branches="Gris"
							verres="Transparent"
							modelId="gris"
						/>
					</div>
				</div>
			</div>
		</section>
		<!-- Testimonials Section -->
		<section class="w-full bg-white py-20">
			<div class="w-full mx-auto px-6 md:px-12 lg:px-16">
				<div class="max-w-6xl mx-auto">
					<!-- Header -->
					<div class="text-center mb-16">
						<h2
							class="text-4xl lg:text-5xl font-bold text-black mb-4"
						>
							Ce qu'en pensent <span class="text-primary"
								>nos clients</span
							>...
						</h2>
					</div>

					<!-- Testimonials Carousel -->
					<AvisClient />
				</div>
			</div>
		</section>
	</main>
</Layout>
