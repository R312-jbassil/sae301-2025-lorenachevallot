---
import Tailles from "../components/tailles.astro";
import Options from "../components/options.astro";
import Layout from "../layouts/Layout.astro";
import Materiaux from "../components/materiaux.astro";
import Finitions from "../components/finitions.astro";
import Couleurs from "../components/couleurs.astro";
import Ia from "../components/ia.astro";
import Resume from "../components/resume.astro";
---

<Layout>
    <!-- Section Personnalisez votre paire -->
    <div class="w-full bg-base-100 border-b border-base-300">
        <div class="w-full mx-auto px-16 py-12">
            <h1 class="text-3xl font-normal mb-3">
                Personnalisez <span class="text-primary">votre paire</span>
            </h1>
            <p class="text-base-content/70 text-base">
                Personnalisez votre paire en quelques clics ou décrivez-la en
                langage naturel. Aperçu instantané.
            </p>
        </div>
    </div>

    <!-- Section Cartes Bénéfices -->
    <div class="w-full bg-base-200 py-12">
        <div class="w-full mx-auto px-16">
            <div class="bg-neutral rounded-2xl p-8 md:p-12">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                    <!-- Carte 1 -->
                    <div class="text-center text-neutral-content">
                        <div class="flex justify-center mb-4">
                            <div
                                class="w-12 h-12 bg-primary rounded-full flex items-center justify-center"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-lg font-semibold mb-2">
                            Fabrication française
                        </h3>
                        <p class="text-sm text-neutral-content/80">
                            Toutes nos lunettes sont fabriquées en France avec
                            un savoir-faire artisanal de 2
                        </p>
                    </div>

                    <!-- Carte 2 -->
                    <div class="text-center text-neutral-content">
                        <div class="flex justify-center mb-4">
                            <div
                                class="w-12 h-12 bg-primary rounded-full flex items-center justify-center"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-lg font-semibold mb-2">
                            Garantie 2 ans
                        </h3>
                        <p class="text-sm text-neutral-content/80">
                            Profitez d'une garantie complète de 2 ans sur tous
                            nos produits.
                        </p>
                    </div>

                    <!-- Carte 3 -->
                    <div class="text-center text-neutral-content">
                        <div class="flex justify-center mb-4">
                            <div
                                class="w-12 h-12 bg-primary rounded-full flex items-center justify-center"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                    ></path>
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-lg font-semibold mb-2">
                            Ajustage soigné
                        </h3>
                        <p class="text-sm text-neutral-content/80">
                            Un ajustement parfait garanti par nos opticiens
                            partenaires.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal du configurateur -->
    <div class="w-full flex-1 bg-white">
        <div class="w-full mx-auto px-16 py-12">
            <!-- Deux colonnes équitables -->
            <div class="grid grid-cols-2 gap-8">
                <!-- Colonne gauche : composants en colonne -->
                <div class="flex flex-col gap-6">
                    <Ia />
                    <Materiaux />
                    <Couleurs />
                    <Tailles />
                    <Finitions />
                    <Options />
                </div>

                <!-- Colonne droite : Resume -->
                <div>
                    <Resume />
                </div>
            </div>
        </div>
    </div>
</Layout>
