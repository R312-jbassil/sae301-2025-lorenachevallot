---
import Insta from "../assets/insta.svg";
import Twitter from "../assets/twitter.svg";
import Facebook from "../assets/facebook.svg";
import LinkedIn from "../assets/linkedin.svg";
import QRCode from "../assets/Qr_Code.png";
import temps from "../assets/temps.svg";
import validation from "../assets/validation.svg";
import googleplay from "../assets/google_play.png";
import appstore from "../assets/appstore.png";
---

<footer id="site-footer" class="w-full bg-black text-white/95">
  <div class="w-full mx-auto px-12 lg:px-16 py-16">
    <!-- Top columns -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-x-24 gap-y-16"
    >
      <!-- Newsletter -->
      <div>
        <h3
          class="text-2xl font-semibold text-primary tracking-wide leading-tight"
        >
          Newsletter
        </h3>
        <p class="mt-4 text-base font-semibold text-primary label-text">
          Inscris-toi
        </p>
        <p class="mt-3 text-sm text-gray-400 max-w-xs leading-relaxed prose-sm">
          Reçois -10 % sur ta première commande et nos dernières nouveautés.
        </p>
        <div class="mt-6 w-72 max-w-full flex gap-2 items-center">
          <input
            type="email"
            placeholder="Enter your email"
            class="input flex-1 bg-black/20 border border-gray-700 focus:border-primary focus:ring-1 focus:ring-primary/60 text-white placeholder-gray-500 rounded-md transition-colors"
          />
          <button
            class="h-9 w-10 rounded-md border border-primary bg-primary text-black hover:bg-primary/90 transition-colors grid place-items-center shrink-0"
            aria-label="S'inscrire"
          >
            <!-- arrow icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="white"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M4 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Contact -->
      <div>
        <h3
          class="text-2xl font-semibold text-primary tracking-wide leading-tight"
        >
          Contact
        </h3>
        <div
          class="mt-4 space-y-2 text-sm text-primary leading-relaxed prose-sm"
        >
          <p class="label-text">11 rue du Mouvement, 44000 Nantes, France</p>
          <p class="label-text">moval@gmail.com</p>
          <p class="label-text">+33 1 84 25 64 90</p>
        </div>
      </div>

      <!-- Mon compte -->
      <div>
        <h3
          class="text-2xl font-semibold text-primary tracking-wide leading-tight"
        >
          Mon compte
        </h3>
        <ul class="mt-4 space-y-2 text-sm text-primary menu-compact">
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Mon profil</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Connexion / Inscription</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Mes créations</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Mon panier</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Boutique</a
            >
          </li>
        </ul>
      </div>

      <!-- Liens utiles -->
      <div>
        <h3
          class="text-2xl font-semibold text-primary tracking-wide leading-tight"
        >
          Liens utiles
        </h3>
        <ul class="mt-4 space-y-2 text-sm text-primary menu-compact">
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Politique de confidentialité</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Conditions générales</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >FAQ</a
            >
          </li>
          <li>
            <a class="hover:text-primary transition-colors label-text" href="#"
              >Nous contacter</a
            >
          </li>
        </ul>
      </div>

      <!-- Notre application -->
      <div>
        <h3
          class="text-2xl font-semibold text-primary tracking-wide leading-tight"
        >
          Notre application
        </h3>
        <p class="mt-3 text-sm text-primary leading-relaxed max-w-xs prose-sm">
          Profite d'avantages exclusifs dans l'app TaVue.
        </p>

        <!-- QR + Stores -->
        <div class="mt-4 flex items-start gap-4">
          <!-- QR code image -->
          <a href="#" class="hover:opacity-80 transition">
            <img
              src={`${QRCode.src}`}
              alt="QR Code"
              class="w-24 h-24 rounded-sm"
            />
          </a>
          <div class="flex flex-col gap-2">
            <a href="#" class="hover:opacity-80 transition">
              <img
                src={`${googleplay.src}`}
                alt="Google Play"
                class="h-10 w-auto"
              />
            </a>
            <a href="#" class="hover:opacity-80 transition">
              <img
                src={`${appstore.src}`}
                alt="App Store"
                class="h-10 w-auto"
              />
            </a>
          </div>
        </div>

        <!-- Socials -->
        <div class="mt-6 flex items-center gap-6 text-xl text-gray-300">
          <a
            href="#"
            aria-label="Facebook"
            class="hover:text-primary transition-colors"
          >
            <img src={Facebook.src} alt="Facebook" class="w-8 h-8" />
          </a>
          <a
            href="#"
            aria-label="Twitter"
            class="hover:text-primary transition-colors"
          >
            <img src={Twitter.src} alt="Twitter" class="w-8 h-8" />
          </a>
          <a
            href="#"
            aria-label="Instagram"
            class="hover:text-primary transition-colors"
          >
            <img src={Insta.src} alt="Instagram" class="w-8 h-8" />
          </a>
          <a
            href="#"
            aria-label="LinkedIn"
            class="hover:text-primary transition-colors"
          >
            <img src={LinkedIn.src} alt="LinkedIn" class="w-8 h-8" />
          </a>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="mt-10 border-t border-white/10"></div>

    <!-- Bottom features -->
    <div
      class="mt-6 grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-white/10 justify-items-center"
    >
      <!-- Feature 1 -->
      <div
        class="flex items-center gap-4 py-4 pr-6 hover:bg-white/5 rounded-md transition-colors"
      >
        <div
          class="h-9 w-9 rounded-full bg-primary text-black grid place-items-center shadow-sm"
        >
          <img src={validation.src} alt="Validation" class="w-5 h-5" />
        </div>
        <div>
          <p class="text-sm font-semibold label">Fabrication française</p>
          <p class="text-xs text-gray-400 label-text-alt">
            100% Made in France
          </p>
        </div>
      </div>

      <!-- Feature 2 -->
      <div
        class="flex items-center gap-4 py-4 px-6 hover:bg-white/5 rounded-md transition-colors"
      >
        <div
          class="h-9 w-9 rounded-full bg-primary text-black grid place-items-center shadow-sm"
        >
          <img src={temps.src} alt="Temps" class="w-5 h-5" />
        </div>
        <div>
          <p class="text-sm font-semibold label">Livraison 72h</p>
          <p class="text-xs text-gray-400 label-text-alt">
            Livraison offerte dès 150€
          </p>
        </div>
      </div>

      <!-- Feature 3 -->
      <div
        class="flex items-center gap-4 py-4 pl-6 hover:bg-white/5 rounded-md transition-colors"
      >
        <div
          class="h-9 w-9 rounded-full bg-primary text-black grid place-items-center shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="white"
            class="w-6 h-6"
            ><path d="M12 6V3L8 7l4 4V8a4 4 0 11-4 4H6a6 6 0 106-6z"
            ></path></svg
          >
        </div>
        <div>
          <p class="text-sm font-semibold label">Retours gratuits</p>
          <p class="text-xs text-gray-400 label-text-alt">
            30 jours pour changer d'avis
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Force tous les textes/liens du footer en blanc */
  #site-footer
    :where(h1, h2, h3, h4, h5, h6, p, li, a, span, strong, em, small, label) {
    color: #fff;
  }

  /* Liens: toutes les variantes gardent le blanc */
  #site-footer a,
  #site-footer a:visited,
  #site-footer a:hover,
  #site-footer a:focus,
  #site-footer a:active {
    color: #fff;
  }

  /* Exception: badges sur fond blanc (Google Play / App Store) restent en texte noir */
  #site-footer a.bg-white,
  #site-footer a.bg-white:visited,
  #site-footer a.bg-white:hover,
  #site-footer a.bg-white:focus,
  #site-footer a.bg-white:active {
    color: #000;
  }
  #site-footer a.bg-white :where(span, svg) {
    color: #000;
  }
</style>
