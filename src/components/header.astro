---
import Logo from "../assets/logo.png";
import Connecter from "../assets/connecter.svg";
import Panier from "../assets/panier.svg";
---

<header class="w-full bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 md:px-6 py-3 md:py-4">
        <!-- Mobile & Tablet & Desktop Layout -->
        <div class="flex items-center justify-between">
            <!-- Logo + Title (Always visible) -->
            <div class="shrink-0 flex items-center gap-2 md:gap-3">
                <img
                    src={Logo.src}
                    alt="TaVue Logo"
                    class="h-10 md:h-12 w-auto"
                />
                <span class="text-lg md:text-2xl font-bold text-black"
                    >TaVue</span
                >
            </div>

            <!-- Navigation Menu - Hidden on mobile, visible from md -->
            <nav
                class="hidden md:flex flex-1 justify-center gap-6 lg:gap-8 mx-6 lg:mx-8"
            >
                <a
                    href="#"
                    class="text-sm lg:text-base font-medium text-black hover:text-gray-600 transition-colors duration-200"
                >
                    PRODUITS
                </a>
                <a
                    href="#"
                    class="text-sm lg:text-base font-medium text-black hover:text-gray-600 transition-colors duration-200"
                >
                    MES CRÉATIONS
                </a>
                <a
                    href="#"
                    class="text-sm lg:text-base font-medium text-black hover:text-gray-600 transition-colors duration-200"
                >
                    PERSONNALISER
                </a>
                <a
                    href="#"
                    class="text-sm lg:text-base font-medium text-black hover:text-gray-600 transition-colors duration-200"
                >
                    AIDE
                </a>
            </nav>

            <!-- Icons (Always visible) -->
            <div class="shrink-0 flex items-center gap-3 md:gap-6">
                <!-- Panier Icon -->
                <button
                    class="hover:opacity-70 transition-opacity duration-200"
                    aria-label="Panier"
                >
                    <img
                        src={Panier.src}
                        alt="Panier"
                        class="h-5 md:h-6 w-auto"
                    />
                </button>

                <!-- Connecter Icon -->
                <button
                    class="hover:opacity-70 transition-opacity duration-200"
                    aria-label="Connexion"
                >
                    <img
                        src={Connecter.src}
                        alt="Connecter"
                        class="h-5 md:h-6 w-auto"
                    />
                </button>

                <!-- Hamburger Menu - Mobile only -->
                <div class="md:hidden">
                    <button
                        class="btn btn-ghost btn-sm px-2"
                        aria-label="Menu"
                        onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu - Hidden by default -->
        <nav
            id="mobile-menu"
            class="hidden md:hidden mt-4 pb-4 flex-col gap-3 border-t border-gray-200 pt-4"
        >
            <a
                href="#"
                class="text-sm font-medium text-black hover:text-gray-600 transition-colors duration-200 px-2 py-2 rounded hover:bg-gray-100"
            >
                PRODUITS
            </a>
            <a
                href="#"
                class="text-sm font-medium text-black hover:text-gray-600 transition-colors duration-200 px-2 py-2 rounded hover:bg-gray-100"
            >
                MES CRÉATIONS
            </a>
            <a
                href="#"
                class="text-sm font-medium text-black hover:text-gray-600 transition-colors duration-200 px-2 py-2 rounded hover:bg-gray-100"
            >
                PERSONNALISER
            </a>
            <a
                href="#"
                class="text-sm font-medium text-black hover:text-gray-600 transition-colors duration-200 px-2 py-2 rounded hover:bg-gray-100"
            >
                AIDE
            </a>
        </nav>
    </div>
</header>
