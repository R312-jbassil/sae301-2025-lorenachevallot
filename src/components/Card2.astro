    <div class="flex justify-between items-start mb-4">
        <h3 class="text-base font-bold text-gray-900 flex-1">
            {title}
        </h3>
        <p class="text-2xl font-bold text-gray-900 ml-4">
            {price}<span class="text-lg text-gray-700">€</span>
        </p>
    </div>

    <!-- Détails des couleurs -->
    <div class="text-xs text-gray-700 mb-6 space-y-1">
        <p>
            <span class="font-semibold">{monture}</span>
            <span class="text-gray-600 ml-2">{branches}</span>
            <span class="text-gray-600 ml-2">{verres}</span>
        </p>
    </div>

    <!-- Boutons d'actions -->
    <div class="flex justify-center gap-4 mt-auto">
        <!-- Voir -->
        <button
            class="p-3 bg-white rounded-full transition-all duration-200 hover:shadow-md"
            title="Voir le modèle"
            onclick={`viewCreation('${modelId}')`}
        >
            <img src={vue.src} alt="Voir" class="w-6 h-6" />
        </button>
        <!-- Éditer -->
        <button
            class="p-3 bg-white rounded-full transition-all duration-200 hover:shadow-md"
            title="Éditer le modèle"
            onclick={`editCreation('${modelId}')`}
        >
            <img src={modifier.src} alt="Éditer" class="w-6 h-6" />
        </button>
        <!-- Dupliquer -->
        <button
            class="p-3 bg-white rounded-full transition-all duration-200 hover:shadow-md"
            title="Dupliquer le modèle"
            onclick={`duplicateCreation('${modelId}')`}
        >
            <img src={dupliquer.src} alt="Dupliquer" class="w-6 h-6" />
        </button>
        <!-- Supprimer -->
        <button
            class="p-3 bg-white rounded-full transition-all duration-200 hover:shadow-md"
            title="Supprimer le modèle"
            onclick={`deleteCreation('${modelId}')`}
        >
            <img src={supprimer.src} alt="Supprimer" class="w-6 h-6" />
        </button>
    </div>
</div>

<script>
    // Configuration PocketBase
    const POCKETBASE_URL =
        import.meta.env.MODE === "development"
            ? "http://127.0.0.1:8090"
            : "https://sae-301.lorena-chevallot.fr:8084";

    declare global {
        interface Window {
            viewCreation: (id: string) => void;
            editCreation: (id: string) => void;
            duplicateCreation: (id: string) => void;
            deleteCreation: (id: string) => void;
        }
    }

    window.viewCreation = function (id: string) {
        console.log("Voir la création:", id);
        // Charger la création dans le localStorage et rediriger vers le configurateur
        try {
            // Récupérer la création depuis PocketBase
            fetch(`${POCKETBASE_URL}/api/collections/sauvegarde/records/${id}`)
                .then((res) => res.json())
                .then((data) => {
                    // Sauvegarder dans localStorage
                    localStorage.setItem(
                        "selectedCreation",
                        JSON.stringify(data),
                    );
                    window.location.href = "/configurateur";
                })
                .catch((err) => {
                    console.error(
                        "Erreur lors du chargement de la création:",
                        err,
                    );
                    alert("Erreur lors du chargement de la création");
                });
        } catch (error) {
            console.error("Erreur:", error);
        }
    };

    window.editCreation = function (id: string) {
        console.log("Éditer la création:", id);
        // Charger la création et rediriger au configurateur
        try {
            fetch(`${POCKETBASE_URL}/api/collections/sauvegarde/records/${id}`)
                .then((res) => res.json())
                .then((data) => {
                    localStorage.setItem(
                        "editingCreation",
                        JSON.stringify(data),
                    );
                    window.location.href = "/configurateur";
                })
                .catch((err) => {
                    console.error(
                        "Erreur lors du chargement de la création:",
                        err,
                    );
                    alert("Erreur lors du chargement de la création");
                });
        } catch (error) {
            console.error("Erreur:", error);
        }
    };

    window.duplicateCreation = function (id: string) {
        console.log("Dupliquer la création:", id);
        try {
            fetch(`${POCKETBASE_URL}/api/collections/sauvegarde/records/${id}`)
                .then((res) => res.json())
                .then((data) => {
                    // Charger dans le configurateur pour duplication
                    localStorage.setItem(
                        "duplicateCreation",
                        JSON.stringify(data),
                    );
                    window.location.href = "/configurateur";
                })
                .catch((err) => {
                    console.error(
                        "Erreur lors du chargement de la création:",
                        err,
                    );
                    alert("Erreur lors du chargement de la création");
                });
        } catch (error) {
            console.error("Erreur:", error);
        }
    };

    window.deleteCreation = function (id: string) {
        console.log("Supprimer la création:", id);

        // Afficher le modal de confirmation
        (async () => {
            const confirmed = await (window as any).showDeleteConfirmModal?.();

            if (confirmed) {
                try {
                    fetch(
                        `${POCKETBASE_URL}/api/collections/sauvegarde/records/${id}`,
                        {
                            method: "DELETE",
                        },
                    )
                        .then((res) => {
                            if (res.ok) {
                                console.log("Création supprimée avec succès");

                                // Trouver et retirer la card du DOM sans recharger
                                const card = document.querySelector(
                                    `[data-creation-id="${id}"]`,
                                );
                                if (card) {
                                    card.remove();
                                    console.log("Card supprimée du DOM");

                                    // Vérifier s'il reste des créations
                                    const remaining =
                                        document.querySelectorAll(
                                            "[data-creation-id]",
                                        );
                                    if (remaining.length === 0) {
                                        console.log(
                                            "Plus de créations, afficher le message vide",
                                        );
                                        // Le message vide s'affichera déjà s'il y en a un
                                    }
                                }
                            } else {
                                alert("Erreur lors de la suppression");
                            }
                        })
                        .catch((err) => {
                            console.error(
                                "Erreur lors de la suppression:",
                                err,
                            );
                            alert("Erreur lors de la suppression");
                        });
                } catch (error) {
                    console.error("Erreur:", error);
                }
            }
        })();
    };
</script>
